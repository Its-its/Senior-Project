<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-Frame-Options" content="allow">

		<title><%= ROOM %> | Tasty Music</title>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<link rel="stylesheet" href="/css/jquery-ui.min.css" media="screen" charset="utf-8">
		<link rel="stylesheet" href="/css/room.css" media="screen" charset="utf-8">

		<script type="text/javascript" src="https://s.ytimg.com/yts/jsbin/www-widgetapi-vflj6iRlI/www-widgetapi.js"></script>
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<script type="text/javascript" src="/js/socket.io-1.3.7.js"></script>
		<script type="text/javascript" src="/js/jquery-ui.min.js"></script>
		<script type="text/javascript" src="/js/bootstrap.js"></script>
		<script type="text/javascript" src="/js/jquery.tablesorter.min.js"></script>
		<script type="text/javascript" src="https://www.youtube.com/iframe_api"></script>
		<script type="text/javascript" src="https://s.ytimg.com/yts/jsbin/player-en_US-vflnrstgx/base.js"></script>
	</head>
	<body>
		<!-- LOADING SCREEN -->
		<div class="loading-container">
			<div class="c-window">
				<div class="fox-window">
					<span class="the-moon"></span>
					<div class="the-fox">
						<div class="fox-face">
							<section class="eyes left"></section>
							<section class="eyes right"></section>
							<span class="nose"></span>
							<div class="white-part">
								<span class="mouth"></span>
							</div>
						</div>
					</div>
				</div>
				<h2>Loading</h2>
			</div>
		</div>

		<nav class="navbar navbar-inverse">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Tasty Music</a>
				</div>

				<div class="collapse navbar-collapse">
					<form class="navbar-form navbar-right" role="search">
						<div class="form-group">
							<input type="text" class="form-control" placeholder="Room name">
						</div>
						<button type="submit" class="btn btn-default">Go to</button>
					</form>
				</div>
			</div>
		</nav>

		<div class="container-fluid full-container">
			<div class="row full-container">
				<!-- VIDEO STUFF -->
				<div class="col-lg-9 col-md-8 col-sm-7 column-video">
					<div class="video-frame">
						<div id="nothing-playing">
							<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
							<span class="nothing">Nothing Currently Playing</span>
							<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
						</div>

						<div id="video-controls">
							<a class="control" id="upvote"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></a>
							<span class="text" id="upvotes">0</span>

							<a class="control" id="downvote"><span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></a>
							<span class="text" id="downvotes">0</span>

							<span class="text" id="song-name"></span>
						</div>

						<div id="video"></div>
					</div>
				</div>

				<!-- PLAYLIST -->
				<section class="col-lg-9 col-md-8 col-sm-7" id="playlist">
					<div class="search-bar">
						<div class="input-group">
							<span class="input-group-addon glyphicon glyphicon-search" aria-hidden="true" id="basic-addon1"></span>
							<input type="text" class="form-control" placeholder="Search Youtube" aria-describedby="basic-addon1" id="search-media">
						</div>
					</div>

					<div style="height: 100%;">
						<div class="col-sm-2 playlists">
							<ul role="tablist" id="main-buttons">
								<li class="title">Playlists</li>
								<li role="presentation" class="active">
									<a href="#history" aria-controls="history" role="tab" data-toggle="tab" class="button">
										<span class="glyphicon glyphicon-time" aria-hidden="true"></span>
										<span class="playlist-name">Dj History</span>
									</a>
								</li>
							</ul>
						</div>

						<div class="col-sm-10 songlist">
							<div class="tab-content" id="main-lists">
								<ul class="song-table" role="tabpanel" class="tab-pane" id="search-media-div"></ul>
								<ul class="song-table active" role="tabpanel" class="tab-pane" id="history">

									<!-- |-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-| -->
									<li ytid="5r_RN4JvPtg" class="song" style="display: list-item">
										<figure><img src="http://img.youtube.com/vi/5r_RN4JvPtg/0.jpg"></figure>
										<span class="time">00:00:00</span>
										<div class="info">
											<h5 class="name">Best Hip Hop/Rap Music Mix 2015 - (Summer Rap/Hip Hop Mix 2015)</h5>
										</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</section>

				<!-- CHAT -->
				<div class="col-lg-3 col-md-4 col-sm-5 column-chat">
		            <div class="panel-body">
						<ul class="chat-options">
							<a href="#">Users</a>
							<span>&nbsp;|&nbsp;</span>
							<a href="#">WaitList</a>
						</ul>
		                <ul id="chat">
							<li class="left clearfix">
								<span class="chat-img pull-left">
		                        	<img src="http://placehold.it/50/55FF57/fff&text=!" alt="User Avatar" class="img-circle" />
		                    	</span>
		                        <div class="chat-body clearfix">
		                            <div class="header">
		                                <strong class="primary-font">Information</strong>
										<small class="pull-right text-muted"><span class="glyphicon glyphicon-time"></span>now</small>
		                            </div>
		                            <p>This website is currently in Alpha!</p>
		                        </div>
		                    </li>
							<li class="left clearfix">
								<span class="chat-img pull-left">
		                        	<img src="http://placehold.it/50/55FF57/fff&text=!" alt="User Avatar" class="img-circle" />
		                    	</span>
		                        <div class="chat-body clearfix">
		                            <div class="header">
		                                <strong class="primary-font">Information</strong>
										<small class="pull-right text-muted"><span class="glyphicon glyphicon-time"></span>now</small>
		                            </div>
		                            <p>Make sure you're logged in to send a chat message and request songs! <a href="/">Click me!</a></p>
		                        </div>
		                    </li>
		                </ul>
						<ul class="text">
							<div class="input-group">
								<input id="chat-field" type="text" class="form-control" placeholder="Chat message goes here..">
								<span class="input-group-btn">
									<button id="chat-send" class="btn btn-success" type="button">Send</button>
								</span>
							</div>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- BOTTOM NAVBAR -->
		<nav class="navbar navbar-inverse navbar-fixed-bottom">
			<ul class="nav navbar-nav">
				<li><a href="javascript:void(null)" id="toggle-playlist"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a></li>
			</ul>

			<ul class="nav navbar-nav navbar-right">
				<div class="volume-container">
					<li class="indicators"><span class="glyphicon glyphicon-volume-down" aria-hidden="true"></span></li>
					<li><div id="volume"></div></li>
					<li class="indicators"><span class="glyphicon glyphicon-volume-up" aria-hidden="true"></span></li>
				</div>
			</ul>
		</nav>

		<script type="text/javascript" src="/js/video.js"></script>
		<script type="text/javascript" src="/js/playlist.js"></script>
		<script type="text/javascript" src="/js/room.js"></script>
		<script type="text/javascript" src="https://apis.google.com/js/client.js?onload=onClientLoad"></script>
	</body>
</html>
